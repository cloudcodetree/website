{
  "name": "infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/infra/src",
  "targets": {
    "bootstrap": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "cwd": "apps/infra",
        "parallel": false,
        "commands": ["npx cdk bootstrap"]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "cwd": "apps/infra",
        "all": true,
        "require-approval": "never",
        "commands": ["npx cdk deploy --all"]
      }
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "cwd": "apps/infra",
        "all": true,
        "require-approval": "never",
        "commands": ["npx cdk destroy --all"]
      }
    },
    "synth": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "cwd": "apps/infra",
        "parallel": false,
        "all": true,
        "commands": [
          "npx cdk synthesize --outputs-file ./cdk-outputs.json --debug --all"
        ]
      }
    },
    "diff": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "cwd": "apps/infra",
        "parallel": false,
        "all": true,
        "commands": ["npx cdk diff --all"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/infra/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/infra/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
